{
  "compilerOptions": {
    "baseUrl": "./server",
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es2018", "dom"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "alwaysStrict": true
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
